<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>boot-framework</artifactId>
        <groupId>com.gemini.boot.framework</groupId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.gemini.business.protal</groupId>
    <artifactId>gemini-protal</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>boot-common</module>
        <module>boot-sys</module>
        <module>boot-layui</module>
        <module>boot-bootstrap</module>
    </modules>

    <properties>
        <!--        业务版本-->
        <boot-framework.version>2.0.0-SNAPSHOT</boot-framework.version>
        <business-protal.version>2.0.0-SNAPSHOT</business-protal.version>


        <shiro.version>1.4.0</shiro.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--业务模块-->
            <dependency>
                <groupId>com.gemini.business.protal</groupId>
                <artifactId>boot-layui</artifactId>
                <version>${business-protal.version}</version>
            </dependency>
            <dependency>
                <groupId>com.gemini.business.protal</groupId>
                <artifactId>boot-bootstrap</artifactId>
                <version>${business-protal.version}</version>
            </dependency>
            <!--第三方模块-->
            <dependency>
                <groupId>org.apache.shiro</groupId>
                <artifactId>shiro-spring</artifactId>
                <version>${shiro.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test-autoconfigure</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-actuator-autoconfigure</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-autoconfigure</artifactId>
        </dependency>
    </dependencies>

</project>
